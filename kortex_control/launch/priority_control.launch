<?xml version="1.0"?>
<launch>
    
    <node pkg="kortex_control" type="master_controller" name="master_controller" output="screen" >
        <param name="robot_description" command="xacro $(find kortex_control)/arm_description/robot_model.xacro" />
        <param name="base_frame" value="base_link" />
        <param name="tip_frame" value="end_effector_link" />
    </node>

    <node pkg="kortex_control" type="tf_listener" name="tf_listener" output="screen" >
        <param name="source_frame" value="tool_frame" />
        <param name="target_frame" value="dummy_pelvis" />
    </node>

    <node pkg="kortex_gazebo" type="dummy_pelvis_tf" name="dummy_pelvis_tf" output="screen" />

</launch>
